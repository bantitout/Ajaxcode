<%= form_for(@post, remote: true, :html => { :role => "form" }) do |f| %>
<div id="error_explanation" class="bg-danger text-danger">
</div>
 
<div class="row">
 <div class="col-sm-6">
  <div class="form-group">
    <%= f.label :titel, :class => "control-label" %>
    <%= f.text_field :titel, :class => "form-control first_input"  %>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => "control-label" %>
    <%= f.text_field :body, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit  @post.new_record? ? "Create Create" : "Update post", :class => "btn btn-primary" %>
  </div>
  
 </div>
</div>
<% end %>